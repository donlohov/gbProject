.cover
	width 99%
	height 100%
	position relative
	&__img
		height 612px
		width 1112px
		+responsive(lg)
			height 100%
			width 100%
	&__item
		width 100vw
		height 100%
		position absolute
		display flex
		align-items center
		justify-content start
		bottom 0
		margin-bottom 39px
	&-text
		width 100vw
		height initial
		position static
		border-left coverTextBorderLeft
		bottom 0
		padding 0 0 0 10px
		margin 0
		&__title
			color #222222
			font-size coverTextTitle
			font-weight 900
			letter-spacing 1.5px
			line-height 74%
			text-align left
			text-transform uppercase
			margin-bottom 20px
			+responsive(lg)
				font-size (coverTextTitle / lgMd)
			+responsive(md)
				font-size (coverTextTitle / mdSm)
			+responsive(sm)
				font-size (coverTextTitle / smXs)
			+responsive(xs)
				font-size (coverTextTitle / xsXss)
			+responsive(xss)
				font-size (coverTextTitle / xssMin)
		&__description
			width inherit
			display flex
		&__span
			font-size (coverTextTitle/1.5)
			font-weight 700
			letter-spacing .8px
			line-height 75%
			text-align left
			text-transform uppercase
			+responsive(lg)
				font-size (coverTextTitle / (lgMd * 1.5))
			+responsive(md)
				font-size (coverTextTitle / (mdSm * 1.5))
			+responsive(sm)
				font-size (coverTextTitle / (smXs * 1.5))
			+responsive(xs)
				font-size (coverTextTitle / (xsXss * 1.5))
			+responsive(xss)
				font-size (coverTextTitle / (xssMin * 1.5))
			&:nth-child(1)
				color #222222
			&:nth-child(2)
				color #f16d7f
				margin 0 0 0 7px