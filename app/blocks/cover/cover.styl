.cover
	width 100%
	height 100%
	&__img
		height 612px
		width 1112px
		+responsive(lg)
			height 100%
			width 100%
	&-text
		border-left coverTextBorderLeft
		padding 0
		margin-bottom coverTextMarginBottom
		left 0
		+responsive(lg)
			margin-bottom (coverTextMarginBottom - 50px)
		+responsive(md)
			margin-bottom (coverTextMarginBottom - 120px)
		+responsive(sm)
			margin-bottom (coverTextMarginBottom - 190px)
		+responsive(xs)
			margin-bottom 25%
		&__title
			color #222222
			font-size coverTextTitle
			font-weight 700
			line-height 69%
			text-align left
			text-transform uppercase
			margin 0 0 2% 1%
		&__description
			color #222222
			font-size round(coverTextTitle/1.5)
			font-weight 700
			line-height 76%
			text-align left
			text-transform uppercase
			margin 0 0 0 1%
		&__span
			color #f16d7f
			font-weight 700
			text-align left
			text-transform uppercase
			margin 0 0 0 1%
