.offer
	width 100%
	height 100%
	display flex
	flex-wrap: wrap
	background-color #222224
	&-coverItems
		display flex
		flex-wrap nowrap
		+responsive(lg)
			flex-wrap wrap
		&__item
			display flex
			margin 4% 1%
			+responsive(lg)
				flex-direction column
				align-items center
				margin-bottom 10px
		&__img
			margin-right 20px
			+responsive(lg)
				margin-right 0
				margin-bottom 10px
		&__title
			color #fbfbfb
			font-size 20px
			font-weight 700
			letter-spacing 0.5px
			+responsive(lg)
				text-align center
	&-cover
		display flex
		width 100%
		height 100%
		&__img
			width 100%
			height 80%
			position relative
		&__img img
			height 100%
			+responsive(lg)
				width: 100%
		&__title
			position absolute
			color #ffffff
			font-size 54px
			line-height 48px
			font-weight 700
			text-transform uppercase
			letter-spacing 1.5px
			margin 19% 0 0 5%
			+responsive(md)
				position: relative
				text-align: center
				margin 5% 0 3% 0
		&__span
			color #f16d7f
		&__description
			color #ffffff
			font-size 32px
			font-weight 700
			text-transform uppercase
			letter-spacing 0.9px
	&-items
		width 100%
		height 100%
		display flex
		align-items center
		justify-content space-around
		flex-wrap wrap
		padding 30px
		&__item
			display flex
			flex-direction column
			align-items center
			margin 4% 1%
		&__img
			width 24%
			height 30%
			margin-bottom 10px
		&__img img
			width 100%
		&__title
			color #fbfbfb
			font-size 20px
			font-weight 700
			letter-spacing 0.5px
			text-align: center
		&__description
			width 219px
			color #fbfbfb
			font-size 14px
			font-weight 300
			line-height 24px
			letter-spacing 0.35px