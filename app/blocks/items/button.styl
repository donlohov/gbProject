// button

.button
.button-dropdown
.header-search
.form
.header-shopCart
  &-button
    &__link
      line-height 39px
      font-size 14px
      font-weight 300
      letter-spacing 0.35px
      border 1px solid #e6e6e6
      &:active
        color #222222
        background-color #FFFFFF
      &:hover
        color #FFFFFF
        text-decoration none
      &::after
        color #FFFFFF
        margin-left 3px
        margin-top 18px
        position absolute