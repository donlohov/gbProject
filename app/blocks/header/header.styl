/* header */
.header
	display flex
	align-items center
	justify-content space-between
	padding 16px 0 15px 0
	&-logo
		&__link
			display block
			margin-right 34px
	&-toggle
		&__button
			&:active
				color whiteColor!important
				background-color accentColor
	&-collapse
		width 100%
		height 100%
		display flex
		align-items center
		justify-content space-between
		+responsive(sm)
			justify-content space-around
			margin-top 40px
			flex-wrap wrap
		+responsive(xs)
			margin-top 12px
			justify-content center
			flex-direction column
		&__item
			&:nth-child(1)
				+responsive(xs)
					margin 30px 0
	&-search
		height 39px
		display flex
		align-items center
		justify-content start
		flex-wrap nowrap
		&__item
			height inherit
		&__dropdownButton
			position relative
			height inherit
			color #222222
			font-size 13px
			font-weight 300
			letter-spacing .69px
			background-color moreLightColor
			border-radius 3px 0 0 3px
			border 1px solid lightColor
			padding 9px 9px 11px 12px
			&::after
				color grayColor
				margin-left 8px
				margin-bottom -1px
			&:hover
				color baseColor
		&__form
			height inherit
			display flex
			justify-content space-around
			align-items center
			flex-wrap nowrap
		&__input
			width 280px
			height inherit
			font-size 13px
			letter-spacing 0.7px
			font-weight 300
			border 1px solid lightColor
			border-radius 0
			border-left 0
			border-right 0
			padding 0 15px
			+responsive(md)
				width 20vw
			+responsive(sm)
				width 25vw
			+responsive(xs)
				width 50vw
		&__button
			width 37px
			height inherit
			font-size 14px
			color grayColor
			background whiteColor
			border-radius 0 3px 3px 0
			border 1px solid lightColor
			&:hover
				background-color accentColor
		&__fa
			margin-left -2px

	&-basket
		width initial
		height initial
		display flex
		align-items center
		justify-content space-around
		&__item
			height 39px
			margin-right -4px
			&:nth-child(1) //иконка корзины
				margin-bottom -17px
				margin-right 26px
				+responsive(xs)
					margin-bottom 0
		&__link
			width 100%
			height 100%
		&__img
			width 32px
			height 29px
			+responsive(xs)
				width calc(32px + 30%)
				height calc(29px + 30%)
		&__button
			height inherit
			color whiteColor
			font-size 14px
			font-weight 400
			letter-spacing 1px
			background-color accentColor
			border 1px solid lightColor
			border-radius 0
			padding 8px 11px 12px 18px
			&::after
				color whiteColor
				margin-left 8px
			&:hover
				color whiteColor

	&-topNav
		width 90vw
		text-transform uppercase
		+responsive(sm)
			margin 40px 0
		+responsive(xs)
			width 50vw
		&__list
			+responsive(sm)
				flex-direction row
				justify-content center
			+responsive(xs)
				flex-direction column
		&__item
			width 8rem
			height 39px
			+responsive(sm)
				margin 3vw
			+responsive(xs)
				width inherit
				margin 8px 0

