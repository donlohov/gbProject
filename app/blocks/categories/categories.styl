//categories

.categories
	width 100%
	height 100%
	display grid
	grid-template-columns repeat(2, 1fr)
	grid-template-rows repeat(3, 1fr)
	margin-top 88px
	margin-bottom 20px
	padding 0
	&-item
		width 100%
		height 100%
		padding 5px
		position relative
		&:hover
			&::before
				opacity .85
		&::before
			content ''
			position absolute
			top 0
			left 0
			right 0
			bottom 0
			background-color baseColor
			opacity .15
			transition opacity .5s ease
		> *
			z-index 1
		&:nth-child(1)
			grid-row 1/3
		&:nth-child(2)
			grid-row 1/2
			padding-top 5px
		&:nth-child(3)
			grid-row 3/4
			padding-top 10px
		&:nth-child(4)
			grid-row 2/4
		&__img
			position relative
			z-index 1
		&-text
			position absolute
			background-color #fff
			padding 0 10px 0 12px
			margin-top 20px
			z-index 3
			&__title
				color #f16d7f
				font-size 30px
				line-height 42px
				font-weight 700
				letter-spacing 0.75px
				text-transform uppercase
			&__description
				color #222222
				font-size 18px
				font-weight 700
				text-transform uppercase
				letter-spacing 0.45px
