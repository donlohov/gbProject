//categories

.categories
  width 100%
  height 100%
  margin-top 88px
  margin-bottom 20px
  padding 0
  &__items
    display flex
    align-items space-around
    justify-content space-around
    flex-wrap wrap
    height 100%
    +responsive(md)
      justify-content center

.cat_1
  width 40em
  height 542px
  margin 0

.cat_1_img
  position absolute
  z-index 100

.cat_1_img:hover
  opacity 0.8

.cat_1_name
  height 81px
  margin-top 27px
  display flex
  position absolute
  z-index 9999

.cat_1_name a
  color #222222
  background-color #fff
  font-size 18px
  font-weight 700
  text-transform uppercase
  letter-spacing 0.45px
  text-decoration none
  padding 13px 18px 0 18px
  margin-top -1px

.cat_1_name span
  color #f16d7f
  font-size 30px
  line-height 42px
  font-weight 700
  letter-spacing 0.75px

.cat_2
  width 40em
  height 261px
  margin 0
  +responsive(lg)
    margin-top 11px

.cat_3
  width 40em
  height 260px
  background-color #dadad2
  margin 11px 0 0 0
  +responsive(lg)
    margin-top 541px + 11px * 2

.cat_3 img
  padding-left 149px
  padding-bottom 21px

.cat_4
  width 40em
  height 541px
  align-content flex-start
  margin -271px 0 0 0
  +responsive(lg)
    margin-top -802px - 11px