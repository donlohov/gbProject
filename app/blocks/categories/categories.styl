//categories
.categories
	width 100%
	height 100%
	display grid
	grid-template-columns repeat(2, 1fr)
	grid-template-rows repeat(3, 1fr)
	grid-gap 20px
	+responsive(md)
		grid-template-columns repeat(1, 1fr)
		grid-template-rows repeat(6, 1fr)
	&-item
		width 100%
		height 100%
		transition transform .5s ease-in
		&:nth-child(1)
			grid-row 1/3
		&:nth-child(2)
			grid-row 1/2
			+responsive(md)
				grid-row 3/4
		&:nth-child(3)
			grid-row 3/4
			+responsive(md)
				grid-row 6/7
		&:nth-child(4)
			grid-row 2/4
			+responsive(md)
				grid-row 4/6
		&__img
			position relative
			z-index 1
			width 100%
		&-text
			position absolute
			background-color #fff
			padding 10px
			margin-top 20px
			z-index 3
			&__title
				color #f16d7f
				font-size 30px
				line-height 30px
				font-weight 700
				letter-spacing 0.75px
				text-transform uppercase
			&__description
				color #222222
				font-size 18px
				font-weight 700
				line-height 19px
				text-transform uppercase
				letter-spacing 0.45px
				margin: 0
				padding: 0
		&:hover
			transform scale(1.03)
		&:active
			transform scale(.95)

