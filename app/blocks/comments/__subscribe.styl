/*.subscribe*/
.subscribe
	height 100%
	display flex
	flex-direction column
	margin-bottom 32px
	+responsive(xss)
		margin-bottom 0
	&__text
		color baseColor
		text-align center
		text-transform uppercase
		font-weight 400
		margin-bottom 16px
	&__title
		font-size 24px
		letter-spacing .5px
		margin 4px
	&__description
		font-size 14px
	letter-spacing .11px
	&__form
		height 46px
		padding 0
		margin 0 auto
	&__input
		width 282px
		height 100%
		color baseColor
		background-color inputBgColor
		font-size .875rem
		letter-spacing 0.5px
		border-radius 30px 0 0 30px
		padding 0 10px 0 25px
		+responsive(xss)
			width 72%
		&:focus
			background-color inputBgColor
	&__submit
		width 104px
		height 100%
		color whiteColor
		background-color accentColor
		font-size .875rem
		border-radius 0 30px 30px 0
		+responsive(xss)
			width 29%
		&:hover
			background-color accentColor