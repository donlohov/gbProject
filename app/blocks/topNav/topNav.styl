.topNav
	width 100%
	height 100%
	&__list
		display flex
		justify-content center
		position relative
	&__item
		height 100%
	&__link
		color baseColor
		font-size 14px
		font-weight 400
		line-height 26px
		text-transform uppercase
		padding 12px 1.3vw
		text-align center
		&:hover
			color accentColor
			text-decoration none
		&--active
			border-bottom 3px solid accentColor