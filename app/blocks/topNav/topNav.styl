.topNav
	width 100%
	height 100%
	&__list
		display flex
		justify-content center
		position relative
	&__item
		height 100%
	&__link
		color baseColor
		font-size 14px
		font-weight 400
		text-align center
		letter-spacing 0.39px
		text-transform uppercase
		padding 15px 21px
		&:hover
			color accentColor
			text-decoration none
		&--active
			border-bottom 3px solid accentColor