.breadcrumbs
  height 150px
  background-color #f8f3f4
  display flex
  align-items center
  &__items
    display flex
    justify-content space-between
    align-items center
  &__title
    color #f16d7f
    font-size 24px
    font-weight 400
    line-height 20px
    text-transform uppercase
  &__list
    font-size 14px
    font-weight 300
    line-height 20px
    text-transform uppercase
    display flex
  &__item
    list-style-type none
  &__link
    color #636363
    padding-left 5px
    padding-right 5px
    &:hover
      color #636363
      text-decoration none
    &--active
      color #f16d7f
      font-weight 700
      margin-left 5px
      &:hover
        color #f16d7f
        text-decoration none